{% extends "partials/layout.njk"  %}
{% block title %} Ass Movie {% endblock %}
{% block content %}
  <form acrion="/movies/add" method="POST">
    <div class="mb-3">
        <label for="name" class="form-label">Movie Name</label>
        <input id="name" class="form-control" type="text" placeholder="Movie Name" name="name">
    </div>
    <div class="mb-3">
        <label for="year" class="form-label">Movie year</label>
        <input id="year" class="form-control" type="number" placeholder="Movie year" name="year">
    </div>
    <div class="mb-3">
        <label for="description" class="form-label">Movie description</label>
        <textarea id="description" class="form-control" type="description" placeholder="Movie description" name="description">
    </div>
    <input class="btn btn-primary" type="submit" value="Add">
  </form>
{% endblock %}
   