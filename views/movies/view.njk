{% extends "partials/layout.njk"  %}
{% block title %} Ass Movie {% endblock %}
{% block content %}

<style>
table, th, td {
    border: 2px solid pink;
    }
</style>

   <table>
      <tbody>
         <tr>
            <th>ID</th>
            <td> {{ movie.id }} </td>
         </tr> 
         <tr>
            <th>Name</th>
            <td> {{movie.name}} </td>
         </tr> 
         <tr>
            <th>Year</th>
            <td> {{movie.year}} </td>
         </tr> 
         <tr>
            <th>Description</th>
            <td> {{movie.description}} </td>
         </tr>
      <tbody>
   </table>
   <div class="btn-group" >
                    <a class="btn btn-info" href="/movies/id={{movie.id}}">ID</a>
                    <a class="btn btn-warning" href="/movies/name/{{movie.name}}">Name</a>
                    <a class="btn btn-danger"  href="/movies/year/{{movie.year}}">Year</a>
                    <a class="btn btn-danger"  href="/movies/description/{{movie.description}}">Description</a>
                </div>
{% endblock %}